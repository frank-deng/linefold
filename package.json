{
  "name": "linefold",
  "version": "1.0.14",
  "description": "Convert given text into folded lines with maximum width and given font / given text length measuring function before rendering, so as to render paragraphs onto platforms without line-folding support, e.g. HTML5 Canvas.",
  "main": "dist/linefold.js",
  "keywords": [
    "line",
    "folding",
    "fold",
    "newline"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frank-deng/linefold"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve",
    "build": "webpack",
    "test": "mochapack --webpack-config webpack.config-test.js test.js"
  },
  "author": "Frank Deng",
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.7",
    "html-webpack-plugin": "^5.3.2",
    "less": "^4.1.1",
    "less-loader": "^10.0.1",
    "mocha": "^9.0.2",
    "mochapack": "^2.1.2",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "raw-loader": "^4.0.2",
    "webpack": "^5.43.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0-rc.0",
    "webpack-node-externals": "^3.0.0"
  }
}
